<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://controlMeasuresBrowse.caption"
        focusComponent="controlMeasuresesTable"
        messagesPack="com.company.suraltyn.web.screens.controlmeasures">
    <data readOnly="true">
        <collection id="controlMeasuresesDc"
                    class="com.company.suraltyn.entity.ControlMeasures">
            <view extends="_local"/>
            <loader id="controlMeasuresesDl">
                <query>
                    <![CDATA[select e from ControlMeasures e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="controlMeasuresesTable"
            spacing="true">
        <filter id="filter"
                applyTo="controlMeasuresesTable"
                dataLoader="controlMeasuresesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="controlMeasuresesTable"
                    width="100%"
                    dataContainer="controlMeasuresesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="controlMeasuresesTable.create"/>
                <button id="editBtn" action="controlMeasuresesTable.edit"/>
                <button id="removeBtn" action="controlMeasuresesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
