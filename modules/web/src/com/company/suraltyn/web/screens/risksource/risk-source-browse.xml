<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://riskSourceBrowse.caption"
        focusComponent="riskSourcesTable"
        messagesPack="com.company.suraltyn.web.screens.risksource">
    <data readOnly="true">
        <collection id="riskSourcesDc"
                    class="com.company.suraltyn.entity.RiskSource">
            <view extends="_local"/>
            <loader id="riskSourcesDl">
                <query>
                    <![CDATA[select e from RiskSource e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="riskSourcesTable"
            spacing="true">
        <filter id="filter"
                applyTo="riskSourcesTable"
                dataLoader="riskSourcesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="riskSourcesTable"
                    width="100%"
                    dataContainer="riskSourcesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="riskSourcesTable.create"/>
                <button id="editBtn" action="riskSourcesTable.edit"/>
                <button id="removeBtn" action="riskSourcesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
