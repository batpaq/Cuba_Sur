<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://ratingBrowse.caption"
        focusComponent="ratingsTable"
        messagesPack="com.company.suraltyn.web.screens.rating">
    <data readOnly="true">
        <collection id="ratingsDc"
                    class="com.company.suraltyn.entity.Rating">
            <view extends="_local"/>
            <loader id="ratingsDl">
                <query>
                    <![CDATA[select e from Rating e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ratingsTable"
            spacing="true">
        <filter id="filter"
                applyTo="ratingsTable"
                dataLoader="ratingsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ratingsTable"
                    width="100%"
                    dataContainer="ratingsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ratingsTable.create"/>
                <button id="editBtn" action="ratingsTable.edit"/>
                <button id="removeBtn" action="ratingsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
