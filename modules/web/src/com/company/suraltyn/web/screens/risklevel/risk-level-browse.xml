<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://riskLevelBrowse.caption"
        focusComponent="riskLevelsTable"
        messagesPack="com.company.suraltyn.web.screens.risklevel">
    <data readOnly="true">
        <collection id="riskLevelsDc"
                    class="com.company.suraltyn.entity.RiskLevel">
            <view extends="_local"/>
            <loader id="riskLevelsDl">
                <query>
                    <![CDATA[select e from RiskLevel e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="riskLevelsTable"
            spacing="true">
        <filter id="filter"
                applyTo="riskLevelsTable"
                dataLoader="riskLevelsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="riskLevelsTable"
                    width="100%"
                    dataContainer="riskLevelsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="riskLevelsTable.create"/>
                <button id="editBtn" action="riskLevelsTable.edit"/>
                <button id="removeBtn" action="riskLevelsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
