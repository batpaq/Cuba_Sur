<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://compliancePolicyBrowse.caption"
        focusComponent="compliancePoliciesTable"
        messagesPack="com.company.suraltyn.web.screens.compliancepolicy">
    <data readOnly="true">
        <collection id="compliancePoliciesDc"
                    class="com.company.suraltyn.entity.CompliancePolicy">
            <view extends="_local">
                <property name="department" view="_minimal"/>
                <property name="requirements" view="_minimal"/>
            </view>
            <loader id="compliancePoliciesDl">
                <query>
                    <![CDATA[select e from suraltyn$CompliancePolicy e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="compliancePoliciesTable"
            spacing="true">
        <filter id="filter"
                applyTo="compliancePoliciesTable"
                dataLoader="compliancePoliciesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="compliancePoliciesTable"
                    width="100%"
                    dataContainer="compliancePoliciesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="department"/>
                <column id="initiator"/>
                <column id="comment"/>
                <column id="dueDate"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="compliancePoliciesTable.create"/>
                <button id="editBtn" action="compliancePoliciesTable.edit"/>
                <button id="removeBtn" action="compliancePoliciesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
