<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://trainingBrowse.caption"
        focusComponent="trainingsTable"
        messagesPack="com.company.suraltyn.web.screens.training">
    <data readOnly="true">
        <collection id="trainingsDc"
                    class="com.company.suraltyn.entity.Training">
            <view extends="_local">
                <property name="position" view="_minimal"/>
                <property name="department" view="_minimal"/>
            </view>
            <loader id="trainingsDl">
                <query>
                    <![CDATA[select e from Training e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="trainingsTable"
            spacing="true">
        <filter id="filter"
                applyTo="trainingsTable"
                dataLoader="trainingsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="trainingsTable"
                    width="100%"
                    dataContainer="trainingsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="trainingName"/>
                <column id="employee"/>
                <column id="tabNum"/>
                <column id="date"/>
                <column id="position"/>
                <column id="department"/>
                <column id="initiator"/>
                <column id="comment"/>
                <column id="dueDate"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="trainingsTable.create"/>
                <button id="editBtn" action="trainingsTable.edit"/>
                <button id="removeBtn" action="trainingsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
