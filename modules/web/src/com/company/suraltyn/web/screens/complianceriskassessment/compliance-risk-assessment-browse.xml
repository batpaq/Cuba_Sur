<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://complianceRiskAssessmentBrowse.caption"
        focusComponent="complianceRiskAssessmentsTable"
        messagesPack="com.company.suraltyn.web.screens.complianceriskassessment">
    <data readOnly="true">
        <collection id="complianceRiskAssessmentsDc"
                    class="com.company.suraltyn.entity.ComplianceRiskAssessment">
            <view extends="_local"/>
            <loader id="complianceRiskAssessmentsDl">
                <query>
                    <![CDATA[select e from suraltyn$ComplianceRiskAssessment e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="complianceRiskAssessmentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="complianceRiskAssessmentsTable"
                dataLoader="complianceRiskAssessmentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="complianceRiskAssessmentsTable"
                    width="100%"
                    dataContainer="complianceRiskAssessmentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="complianceRiskAssessmentsTable.create"/>
                <button id="editBtn" action="complianceRiskAssessmentsTable.edit"/>
                <button id="removeBtn" action="complianceRiskAssessmentsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
