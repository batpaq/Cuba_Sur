<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://controlMeasureAssessmentEdit.caption"
        focusComponent="form"
        messagesPack="com.company.suraltyn.web.screens.controlmeasureassessment">
    <data>
        <instance id="controlMeasureAssessmentDc"
                  class="com.company.suraltyn.entity.ControlMeasureAssessment">
            <view extends="_local">
                <property name="controlMeasureName" view="_minimal"/>
                <property name="measurePlan" view="_minimal"/>
                <property name="responsibleExecutor" view="_minimal"/>
                <property name="selfAssessmentSVK" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="controlMeasureAssessmentDc">
            <column width="350px">
                <textField id="numberField" property="number"/>
                <pickerField id="controlMeasureNameField" property="controlMeasureName">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <lookupField id="necessityStatusField" property="necessityStatus"/>
                <textField id="commentField" property="comment"/>
                <pickerField id="measurePlanField" property="measurePlan">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="responsibleExecutorField" property="responsibleExecutor">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="deadlineField" property="deadline"/>
                <pickerField id="selfAssessmentSVKField" property="selfAssessmentSVK">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
