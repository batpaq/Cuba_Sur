<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://conflictOfInterestEdit.caption"
        focusComponent="form"
        messagesPack="com.company.suraltyn.web.screens.conflictofinterest">
    <data>
        <instance id="conflictOfInterestDc"
                  class="com.company.suraltyn.entity.ConflictOfInterest">
            <view extends="_local">
                <property name="planEvent" view="_minimal"/>
                <property name="riskLevel" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="conflictOfInterestDc">
            <column width="350px">
                <textField id="numberField" property="number"/>
                <textField id="initiatorField" property="initiator"/>
                <textArea id="commentField" property="comment" rows="5"/>
                <dateField id="dueDateField" property="dueDate"/>
                <textArea id="conflictDescriptionField" property="conflictDescription" rows="5"/>
                <pickerField id="planEventField" property="planEvent">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="planDueDateField" property="planDueDate"/>
                <pickerField id="riskLevelField" property="riskLevel">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
