<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://departmentBrowse.caption"
        focusComponent="departmentsTable"
        messagesPack="com.company.suraltyn.web.screens.department">
    <data readOnly="true">
        <collection id="departmentsDc"
                    class="com.company.suraltyn.entity.Department">
            <view extends="_local">
                <property name="parent" view="_minimal"/>
                <property name="incidents" view="_minimal"/>
            </view>
            <loader id="departmentsDl">
                <query>
                    <![CDATA[select e from suraltyn$Department e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="departmentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="departmentsTable"
                dataLoader="departmentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="departmentsTable"
                    width="100%"
                    dataContainer="departmentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="parent"/>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="departmentsTable.create"/>
                <button id="editBtn" action="departmentsTable.edit"/>
                <button id="removeBtn" action="departmentsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
