<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://complaintWordSettingBrowse.caption"
        focusComponent="complaintWordSettingsTable"
        messagesPack="com.company.suraltyn.web.screens.complaintwordsetting">
    <data readOnly="true">
        <collection id="complaintWordSettingsDc"
                    class="com.company.suraltyn.entity.ComplaintWordSetting">
            <view extends="_local">
                <property name="complaintReason" view="_minimal"/>
            </view>
            <loader id="complaintWordSettingsDl">
                <query>
                    <![CDATA[select e from ComplaintWordSetting e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="complaintWordSettingsTable"
            spacing="true">
        <filter id="filter"
                applyTo="complaintWordSettingsTable"
                dataLoader="complaintWordSettingsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="complaintWordSettingsTable"
                    width="100%"
                    dataContainer="complaintWordSettingsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="word"/>
                <column id="complaintReason"/>
                <column id="sign"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="complaintWordSettingsTable.create"/>
                <button id="editBtn" action="complaintWordSettingsTable.edit"/>
                <button id="removeBtn" action="complaintWordSettingsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
