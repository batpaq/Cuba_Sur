<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://complaintWordSettingEdit.caption"
        focusComponent="form"
        messagesPack="com.company.suraltyn.web.screens.complaintwordsetting">
    <data>
        <instance id="complaintWordSettingDc"
                  class="com.company.suraltyn.entity.ComplaintWordSetting">
            <view extends="_local">
                <property name="complaintReason" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="complaintWordSettingDc">
            <column width="350px">
                <textArea id="wordField" property="word" rows="5"/>
                <pickerField id="complaintReasonField" property="complaintReason">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <lookupField id="signField" property="sign"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
