<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://productServiceBrowse.caption"
        focusComponent="productServicesTable"
        messagesPack="com.company.suraltyn.web.screens.productservice">
    <data readOnly="true">
        <collection id="productServicesDc"
                    class="com.company.suraltyn.entity.ProductService">
            <view extends="_local">
                <property name="department" view="_minimal"/>
                <property name="owner" view="_minimal"/>
                <property name="riskCoordinator" view="_minimal"/>
                <property name="type" view="_minimal"/>
            </view>
            <loader id="productServicesDl">
                <query>
                    <![CDATA[select e from suraltyn$ProductService e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="productServicesTable"
            spacing="true">
        <filter id="filter"
                applyTo="productServicesTable"
                dataLoader="productServicesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="productServicesTable"
                    width="100%"
                    dataContainer="productServicesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="department"/>
                <column id="owner"/>
                <column id="riskCoordinator"/>
                <column id="type"/>
                <column id="name"/>
                <column id="shortDescription"/>
                <column id="boardStatementNumber"/>
                <column id="approvalDate"/>
                <column id="launchDate"/>
                <column id="postLaunchAnalysis"/>
                <column id="status"/>
                <column id="initiator"/>
                <column id="comment"/>
                <column id="executionDeadline"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="productServicesTable.create"/>
                <button id="editBtn" action="productServicesTable.edit"/>
                <button id="removeBtn" action="productServicesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
