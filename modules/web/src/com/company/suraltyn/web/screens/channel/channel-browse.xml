<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://channelBrowse.caption"
        focusComponent="channelsTable"
        messagesPack="com.company.suraltyn.web.screens.channel">
    <data readOnly="true">
        <collection id="channelsDc"
                    class="com.company.suraltyn.entity.Channel">
            <view extends="_local"/>
            <loader id="channelsDl">
                <query>
                    <![CDATA[select e from suraltyn$Channel e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="channelsTable"
            spacing="true">
        <filter id="filter"
                applyTo="channelsTable"
                dataLoader="channelsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="channelsTable"
                    width="100%"
                    dataContainer="channelsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="channelsTable.create"/>
                <button id="editBtn" action="channelsTable.edit"/>
                <button id="removeBtn" action="channelsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
