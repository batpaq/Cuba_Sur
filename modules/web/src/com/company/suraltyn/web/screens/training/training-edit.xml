<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://trainingEdit.caption"
        focusComponent="form"
        messagesPack="com.company.suraltyn.web.screens.training">
    <data>
        <instance id="trainingDc"
                  class="com.company.suraltyn.entity.Training">
            <view extends="_local">
                <property name="position" view="_minimal"/>
                <property name="department" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="trainingDc">
            <column width="350px">
                <textField id="numberField" property="number"/>
                <textField id="trainingNameField" property="trainingName"/>
                <textField id="employeeField" property="employee"/>
                <textField id="tabNumField" property="tabNum"/>
                <dateField id="dateField" property="date"/>
                <pickerField id="positionField" property="position">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="departmentField" property="department">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="initiatorField" property="initiator"/>
                <textArea id="commentField" property="comment" rows="5"/>
                <dateField id="dueDateField" property="dueDate"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
