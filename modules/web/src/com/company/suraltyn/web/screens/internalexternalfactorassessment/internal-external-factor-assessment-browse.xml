<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://internalExternalFactorAssessmentBrowse.caption"
        focusComponent="internalExternalFactorAssessmentsTable"
        messagesPack="com.company.suraltyn.web.screens.internalexternalfactorassessment">
    <data readOnly="true">
        <collection id="internalExternalFactorAssessmentsDc"
                    class="com.company.suraltyn.entity.InternalExternalFactorAssessment">
            <view extends="_local">
                <property name="measurePlan" view="_minimal"/>
                <property name="responsibleExecutor" view="_minimal"/>
                <property name="selfAssessmentSVK" view="_minimal"/>
            </view>
            <loader id="internalExternalFactorAssessmentsDl">
                <query>
                    <![CDATA[select e from InternalExternalFactorAssessment e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="internalExternalFactorAssessmentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="internalExternalFactorAssessmentsTable"
                dataLoader="internalExternalFactorAssessmentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="internalExternalFactorAssessmentsTable"
                    width="100%"
                    dataContainer="internalExternalFactorAssessmentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="internalFactor"/>
                <column id="externalFactor"/>
                <column id="measurePlan"/>
                <column id="responsibleExecutor"/>
                <column id="deadline"/>
                <column id="selfAssessmentSVK"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="internalExternalFactorAssessmentsTable.create"/>
                <button id="editBtn" action="internalExternalFactorAssessmentsTable.edit"/>
                <button id="removeBtn" action="internalExternalFactorAssessmentsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
