<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://departmentEdit.caption"
        focusComponent="form"
        messagesPack="com.company.suraltyn.web.screens.department">
    <data>
        <instance id="departmentDc"
                  class="com.company.suraltyn.entity.Department">
            <view extends="_local">
                <property name="parent" view="_minimal"/>
                <property name="incidents" view="_minimal"/>
            </view>
            <loader/>
            <collection id="incidentsDc" property="incidents"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="departmentDc">
            <column width="350px">
                <pickerField id="parentField" property="parent">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <groupBox id="incidentsBox" caption="msg://com.company.suraltyn.entity/Department.incidents">
            <table id="incidentsTable" dataContainer="incidentsDc" width="100%" height="200px">
                <columns>
                    <column id="name"/>
                </columns>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
