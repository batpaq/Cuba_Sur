<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://complaintReasonBrowse.caption"
        focusComponent="complaintReasonsTable"
        messagesPack="com.company.suraltyn.web.screens.complaintreason">
    <data readOnly="true">
        <collection id="complaintReasonsDc"
                    class="com.company.suraltyn.entity.ComplaintReason">
            <view extends="_local"/>
            <loader id="complaintReasonsDl">
                <query>
                    <![CDATA[select e from suraltyn$ComplaintReason e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="complaintReasonsTable"
            spacing="true">
        <filter id="filter"
                applyTo="complaintReasonsTable"
                dataLoader="complaintReasonsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="complaintReasonsTable"
                    width="100%"
                    dataContainer="complaintReasonsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="complaintReasonsTable.create"/>
                <button id="editBtn" action="complaintReasonsTable.edit"/>
                <button id="removeBtn" action="complaintReasonsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
