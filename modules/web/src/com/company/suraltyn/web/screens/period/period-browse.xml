<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://periodBrowse.caption"
        focusComponent="periodsTable"
        messagesPack="com.company.suraltyn.web.screens.period">
    <data readOnly="true">
        <collection id="periodsDc"
                    class="com.company.suraltyn.entity.Period">
            <view extends="_local"/>
            <loader id="periodsDl">
                <query>
                    <![CDATA[select e from Period e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="periodsTable"
            spacing="true">
        <filter id="filter"
                applyTo="periodsTable"
                dataLoader="periodsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="periodsTable"
                    width="100%"
                    dataContainer="periodsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="periodsTable.create"/>
                <button id="editBtn" action="periodsTable.edit"/>
                <button id="removeBtn" action="periodsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
