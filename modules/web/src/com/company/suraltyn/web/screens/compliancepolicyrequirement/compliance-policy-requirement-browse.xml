<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://compliancePolicyRequirementBrowse.caption"
        focusComponent="compliancePolicyRequirementsTable"
        messagesPack="com.company.suraltyn.web.screens.compliancepolicyrequirement">
    <data readOnly="true">
        <collection id="compliancePolicyRequirementsDc"
                    class="com.company.suraltyn.entity.CompliancePolicyRequirement">
            <view extends="_local">
                <property name="compliancePolicy" view="_minimal"/>
            </view>
            <loader id="compliancePolicyRequirementsDl">
                <query>
                    <![CDATA[select e from CompliancePolicyRequirement e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="compliancePolicyRequirementsTable"
            spacing="true">
        <filter id="filter"
                applyTo="compliancePolicyRequirementsTable"
                dataLoader="compliancePolicyRequirementsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="compliancePolicyRequirementsTable"
                    width="100%"
                    dataContainer="compliancePolicyRequirementsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="name"/>
                <column id="observationEvaluation"/>
                <column id="comment"/>
                <column id="compliancePolicy"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="compliancePolicyRequirementsTable.create"/>
                <button id="editBtn" action="compliancePolicyRequirementsTable.edit"/>
                <button id="removeBtn" action="compliancePolicyRequirementsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
