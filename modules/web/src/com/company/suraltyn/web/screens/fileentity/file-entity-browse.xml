<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://fileEntityBrowse.caption"
        focusComponent="fileEntitiesTable"
        messagesPack="com.company.suraltyn.web.screens.fileentity">
    <data readOnly="true">
        <collection id="fileEntitiesDc"
                    class="com.company.suraltyn.entity.FileEntity">
            <view extends="_local">
                <property name="fileDescriptor" view="_minimal"/>
                <property name="incidents" view="_minimal"/>
                <property name="planEvents" view="_minimal"/>
                <property name="activities" view="_minimal"/>
            </view>
            <loader id="fileEntitiesDl">
                <query>
                    <![CDATA[select e from FileEntity e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="fileEntitiesTable"
            spacing="true">
        <filter id="filter"
                applyTo="fileEntitiesTable"
                dataLoader="fileEntitiesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="fileEntitiesTable"
                    width="100%"
                    dataContainer="fileEntitiesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fileName"/>
                <column id="fileType"/>
                <column id="fileSize"/>
                <column id="fileDescriptor"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="fileEntitiesTable.create"/>
                <button id="editBtn" action="fileEntitiesTable.edit"/>
                <button id="removeBtn" action="fileEntitiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
