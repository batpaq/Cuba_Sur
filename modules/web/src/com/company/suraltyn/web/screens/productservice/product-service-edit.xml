<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://productServiceEdit.caption"
        focusComponent="form"
        messagesPack="com.company.suraltyn.web.screens.productservice">
    <data>
        <instance id="productServiceDc"
                  class="com.company.suraltyn.entity.ProductService">
            <view extends="_local">
                <property name="department" view="_minimal"/>
                <property name="owner" view="_minimal"/>
                <property name="riskCoordinator" view="_minimal"/>
                <property name="type" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="productServiceDc">
                <column width="350px">
                    <textField id="numberField" property="number"/>
                    <pickerField id="departmentField" property="department">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="ownerField" property="owner">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="riskCoordinatorField" property="riskCoordinator">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="typeField" property="type">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="nameField" property="name"/>
                    <textArea id="shortDescriptionField" property="shortDescription" rows="5"/>
                    <textField id="boardStatementNumberField" property="boardStatementNumber"/>
                    <dateField id="approvalDateField" property="approvalDate"/>
                    <dateField id="launchDateField" property="launchDate"/>
                    <textField id="postLaunchAnalysisField" property="postLaunchAnalysis"/>
                    <lookupField id="statusField" property="status"/>
                    <textField id="initiatorField" property="initiator"/>
                    <textField id="commentField" property="comment"/>
                    <dateField id="executionDeadlineField" property="executionDeadline"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
