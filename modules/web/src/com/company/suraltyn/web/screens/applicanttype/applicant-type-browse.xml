<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://applicantTypeBrowse.caption"
        focusComponent="applicantTypesTable"
        messagesPack="com.company.suraltyn.web.screens.applicanttype">
    <data readOnly="true">
        <collection id="applicantTypesDc"
                    class="com.company.suraltyn.entity.ApplicantType">
            <view extends="_local"/>
            <loader id="applicantTypesDl">
                <query>
                    <![CDATA[select e from suraltyn$ApplicantType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="applicantTypesTable"
            spacing="true">
        <filter id="filter"
                applyTo="applicantTypesTable"
                dataLoader="applicantTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="applicantTypesTable"
                    width="100%"
                    dataContainer="applicantTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="applicantTypesTable.create"/>
                <button id="editBtn" action="applicantTypesTable.edit"/>
                <button id="removeBtn" action="applicantTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
